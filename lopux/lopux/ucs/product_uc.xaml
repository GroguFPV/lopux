<UserControl x:Class="lopux.ucs.product_uc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lopux.ucs"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="1300">
    <Border BorderBrush="Black" BorderThickness="2" Margin="5,5,5,5">
        <Grid Background="White" >
            <StackPanel Orientation="Horizontal">

                <Image x:Name="product_image" Width="200" Height="140"
                       Margin="20,0,0,0"></Image>

                <TextBlock FontSize="35">Тип продукта</TextBlock>
                <TextBlock>|</TextBlock>
                <TextBlock>Наименование продукта</TextBlock>
                
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
